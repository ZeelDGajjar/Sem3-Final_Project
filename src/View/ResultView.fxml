            </ImageView>
         </children>
      </AnchorPane>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: yellow;" styleClass="result-window" StackPane.alignment="CENTER">
