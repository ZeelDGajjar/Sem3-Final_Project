            <Rectangle arcHeight="100.0" arcWidth="100.0" fill="#f6f6f6" height="207.0" layoutX="-44.0" layoutY="-24.0" stroke="BLACK" strokeType="INSIDE" width="298.0" />
            <HBox layoutX="102.0" layoutY="109.0" prefHeight="32.0" prefWidth="76.0">
               <children>
                  <Button fx:id="TryAgainBtn" mnemonicParsing="false" styleClass="try-again-btn" text="TryAgain " />
