<StackPane stylesheets="@../CSSstyles/ResultView.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.GameViewController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="623.0">
