            </HBox>
            <Label fx:id="WarningMessageLabel" layoutX="21.0" layoutY="22.0" styleClass="result-title" text="Warning ">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="FailureReasonLabel" layoutX="22.0" layoutY="67.0" prefHeight="32.0" prefWidth="91.0" styleClass="result-text" text="FailureReason" />
            <Label fx:id="LevelReachedLabel" layoutX="120.0" layoutY="28.0" prefHeight="17.0" prefWidth="44.0" styleClass="result-text" text="LevelReached" />
         </children>
      </Pane>
   </children>
</StackPane>
